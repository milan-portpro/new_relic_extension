{
  "manifest_version": 3,
  "name": "New Relic Login Extension",
  "version": "1.0",
  "description": "Login to New Relic by setting cookies from API",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://one.newrelic.com/*",
    "https://*.newrelic.com/*",
    "https://login.newrelic.com/*",
    "http://localhost:3000/*",
    "http://localhost:9003/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "New Relic Login"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:9003 https://one.newrelic.com https://login.newrelic.com"
  },
  "web_accessible_resources": [
    {
      "resources": ["cookies.json"],
      "matches": ["<all_urls>"]
    }
  ]
}